<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_number"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/acc_total"
            android:layout_margin="@dimen/margin_border"
            app:layout_constraintStart_toEndOf="@+id/txt_info_acc"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/acceleration_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_info_acc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/margin_border"
            app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>